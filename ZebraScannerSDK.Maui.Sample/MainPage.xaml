<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ZebraScannerSDK.Maui.Sample.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:scanner="clr-namespace:ZebraBarcodeScannerSDK;assembly=ZebraScannerSDK.Maui"
    BackgroundColor="White">

    <Shell.TitleView>
        <Label
            FontSize="24"
            HorizontalOptions="Center"
            Text="{Binding Title}"
            TextColor="Red" />
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Image
                HeightRequest="100"
                HorizontalOptions="Center"
                Source="{Binding SetFactoryDefaultsBarcode}" />

            <Image
                HeightRequest="100"
                HorizontalOptions="Center"
                Source="{Binding HostTriggerEventModeDisabledBarcode}" />

            <Image
                x:Name="BotImage"
                HeightRequest="200"
                HorizontalOptions="Center"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                Source="dotnet_bot.png" />

            <Label
                x:Name="HelloWorldLabel"
                FontSize="32"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                Text="Hello, World!"
                TextColor="Black" />

            <Label
                FontSize="18"
                HorizontalOptions="Center"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                SemanticProperties.HeadingLevel="Level2"
                Text="Welcome to .NET Multi-platform App UI"
                TextColor="Black" />

            <Button
                x:Name="CounterBtn"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center"
                SemanticProperties.Hint="Counts the number of times you click"
                Text="Click me" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>