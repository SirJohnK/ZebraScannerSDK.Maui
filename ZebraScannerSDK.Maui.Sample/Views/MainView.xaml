<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ZebraScannerSDK.Maui.Sample.MainView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:app="clr-namespace:ZebraScannerSDK.Maui.Sample"
    xmlns:scg="clr-namespace:System.Collections.Generic;assembly=netstandard"
    x:Name="View"
    Title="Scanning"
    x:DataType="app:MainViewModel">

    <Grid
        Margin="20"
        Padding="0"
        RowDefinitions="Auto, *, Auto, Auto, 3*">

        <Label Grid.Row="0" Text="Scanners:" />

        <Border Grid.Row="1" Padding="10">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>

            <CollectionView ItemsSource="{Binding Scanners}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="scg:KeyValuePair(x:Int32,app:IZebraScanner)">
                        <Grid
                            Margin="0"
                            Padding="0"
                            ColumnDefinitions="*, Auto, Auto">
                            <Label
                                Grid.Column="0"
                                FontAttributes="Bold"
                                Text="{Binding Value.Name}"
                                VerticalOptions="Center" />
                            <Button
                                Grid.Column="1"
                                Margin="0,5"
                                Padding="10,0"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type app:MainViewModel}}, Path=ToggleConnectionCommand, x:DataType={x:Type app:MainViewModel}}"
                                CommandParameter="{Binding Value}"
                                CornerRadius="5"
                                MinimumHeightRequest="30">
                                <Button.Triggers>
                                    <DataTrigger
                                        Binding="{Binding Value.IsConnected}"
                                        TargetType="Button"
                                        Value="false">
                                        <Setter Property="Text" Value="Connect" />
                                    </DataTrigger>
                                    <DataTrigger
                                        Binding="{Binding Value.IsConnected}"
                                        TargetType="Button"
                                        Value="true">
                                        <Setter Property="Text" Value="Disconnect" />
                                    </DataTrigger>
                                </Button.Triggers>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Border>

        <ActivityIndicator
            Grid.Row="1"
            HorizontalOptions="Center"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Center" />

        <Button
            Grid.Row="2"
            Margin="0,10"
            Command="{Binding ShowPairingDialogCommand}"
            HorizontalOptions="Fill"
            Text="Pairing Dialog" />

        <Label Grid.Row="3" Text="Scanner Events:" />

        <Border
            Grid.Row="4"
            Padding="10"
            HorizontalOptions="Fill"
            VerticalOptions="Fill">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>

            <Editor IsReadOnly="True" Text="{Binding ScannerEvents}" />
        </Border>
    </Grid>
</ContentPage>